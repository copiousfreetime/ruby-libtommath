# Generated by mkrf
require 'rake/clean'

CLEAN.include('*.o')
CLOBBER.include('math.bundle', 'mkrf.log')

SRC = FileList['*.c']
OBJ = SRC.ext('o')
CC = 'gcc'

ADDITIONAL_OBJECTS = ''

LDSHARED = "cc -dynamic -bundle -undefined suppress -flat_namespace "

LIBPATH =  "-L/opt/local/lib -L/opt/local/lib"

INCLUDES = "-I/opt/local/lib/ruby/1.8/i686-darwin8.9.1 -I/opt/local/lib/ruby/site_ruby/1.8 -I. -I/opt/local/include/libtommath"

LIBS = "-lpthread -ldl -lobjc -ltommath"

CFLAGS = " -fno-common -O -pipe -I/opt/local/include  -fno-common -pipe -fno-common  -DHAVE_TOMMATH_H"

RUBYARCHDIR = "#{ENV["RUBYARCHDIR"]}"
LIBRUBYARG_SHARED = "-lruby"

task :default => ['math.bundle']

rule '.o' => '.c' do |t|
  sh "#{CC} #{CFLAGS} #{INCLUDES} -c #{t.source}"
end

desc "Build this extension"
file 'math.bundle' => OBJ do
  sh "#{LDSHARED} #{LIBPATH} -o math.bundle #{OBJ} #{ADDITIONAL_OBJECTS} #{LIBS} #{LIBRUBYARG_SHARED}"
end

desc "Install this extension"
task :install => 'math.bundle' do
  makedirs "#{RUBYARCHDIR}"
  install "math.bundle", "#{RUBYARCHDIR}"
end


