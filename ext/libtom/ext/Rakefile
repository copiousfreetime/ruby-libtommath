# Generated by mkrf
require 'rake/clean'

CLEAN.include('*.o')
CLOBBER.include('math.so', 'mkrf.log')

SRC = FileList['*.c']
OBJ = SRC.ext('o')
CC = 'gcc'

ADDITIONAL_OBJECTS = ''

LDSHARED = "gcc -shared "

LIBPATH =  "-L/usr/lib "

INCLUDES = "-I/usr/include -I/usr/lib/ruby/1.8/i386-linux -I/usr/lib/ruby/site_ruby/1.8 -I."

LIBS = "-lpthread -ldl -lcrypt -lm -ltommath"

CFLAGS = " -fPIC -O2 -g -pipe -Wall -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector --param=ssp-buffer-size=4 -m32 -march=i386 -mtune=generic -fasynchronous-unwind-tables -Wall  -fPIC  "

RUBYARCHDIR = "#{ENV["RUBYARCHDIR"]}"
LIBRUBYARG_SHARED = "-lruby"

task :default => ['math.so']

rule '.o' => '.c' do |t|
  sh "#{CC} #{CFLAGS} #{INCLUDES} -c #{t.source}"
end

desc "Build this extension"
file 'math.so' => OBJ do
  sh "#{LDSHARED} #{LIBPATH} -o math.so #{OBJ} #{ADDITIONAL_OBJECTS} #{LIBS} #{LIBRUBYARG_SHARED}"
end

desc "Install this extension"
task :install => 'math.so' do
  makedirs "#{RUBYARCHDIR}"
  install "math.so", "#{RUBYARCHDIR}"
end


